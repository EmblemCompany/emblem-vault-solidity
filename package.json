{
  "name": "emblem-vault-v3",
  "version": "3.0.0",
  "description": "EmblemVault contracts",
  "main": "index.js",
  "scripts": {
    "reset": "git remote rm origin",
    "lint:init": "node_modules/solhint/solhint.js --init",
    "lint": "node_modules/solhint/solhint.js contracts/**/*.sol",
    "build:solidity": "npx hardhat compile",
    "build:js": "node_modules/.bin/webpack",
    "build": "npm run build:solidity && npm run build:js",
    "test": "npx hardhat test",
    "deploy:rinkeby": "NETWORK=rinkeby npx hardhat run scripts/deploy.js --network rinkeby",
    "deploy:ganache": "NETWORK=ganache npx hardhat run scripts/deploy.js --network ganache",
    "demos:rinkeby": "NETWORK=rinkeby npx hardhat run scripts/demos.js --network rinkeby",
    "verify:rinkeby": "NETWORK=rinkeby npx hardhat run scripts/verify.js --network rinkeby",
    "verify": "npx hardhat verify --network "
  },
  "author": "shannon@emblem.pro",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.3.2",
    "@openzeppelin/contracts-upgradeable": "^4.3.2",
    "@openzeppelin/hardhat-upgrades": "^1.16.0",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.7",
    "hardhat": "^2.6.6",
    "hardhat-abi-exporter": "^2.3.0",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-gas-reporter": "^1.0.4",
    "multiformats": "^9.4.14",
    "solhint": "^3.3.6"
  },
  "dependencies": {
    "@truffle/hdwallet-provider": "^2.0.0",
    "await-spawn": "^4.0.2",
    "dotenv": "^10.0.0",
    "invitelist": "^0.0.2",
    "keccak256": "^1.0.6",
    "merklescript": "^0.0.2",
    "merkletreejs": "^0.2.27",
    "mocha": "^9.1.4",
    "truffle-assertions": "^0.9.2",
    "web3": "^1.6.1"
  }
}
