    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run deploy:rinkeby",
            "name": "Rinkeby Deploy script",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "command": "npm run deploy:aurora",
            "name": "Aurora Deploy script",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "command": "npm run demos:rinkeby",
            "name": "Rinkeby Demos script",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        },{
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/.bin/hardhat",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }
    ]
}